{% extends 'base.html.twig' %}

{% block stylesheets %}{% endblock %}



{% block body %}

    <div class="conteneurlisteemprunt">
        <h3>Liste de mes emprunts :</h3>

        {% for mesemprunt in mesemprunts %}
            <p>{{mesemprunt.ouvrage.titre}} - emprunté le {{mesemprunt.dateEmprunt|date('Y-m-d')}}.</p>
            <p>Date de retour prévue le  {{mesemprunt.dateRetour|date('Y-m-d')}} - réservé par {{mesemprunt.utilisateur}}</p>
            <br><br>

        {% endfor %}
    </div>


{% endblock %}